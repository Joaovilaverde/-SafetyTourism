@model SafetyTourism.Models.Surto

@{
    ViewData["Title"] = "Detalhes do surto";
}



<div>
    <h4>Detalhes do surto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Destino
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destino.Nome)
        </dd>
        <dt class="col-sm-2">
            Doença
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doenca.Nome)
        </dd>
        <dt class="col-sm-2">
            Data
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2">
            Gravidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gravidade)
        </dd>
        <dt class="col-sm-2">
            Nº de Infectados por 100.000 habitantes
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InfectadosPor100k)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SurtoId">Editar</a> |
    <a asp-action="Index">Voltar à lista</a>
</div>