@model SafetyTourism.Models.Doenca

@{
    ViewData["Title"] = "Detalhes da doença";
}



<div>
    <h4>Detalhes da doença</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            Recomendação da OMS
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Recomendacao)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DoencaId">Editar</a> |
    <a asp-action="Index">Voltar à lista</a>
</div>
