@model SafetyTourism.Models.Destino

@{
    ViewData["Title"] = "Detalhes do destino";
}


<div>
    <h4>Detalhes do destino</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surtos)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Doença</th>
                    <th>Data</th>
                    <th>Gravidade</th>
                    <th>Nº de Infectados por 100.000 habitantes</th>
                </tr>
                @foreach (var item in Model.Surtos)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Doenca.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gravidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InfectadosPor100k)
                </td>
            </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DestinoId">Editar</a> |
    <a asp-action="Index">Voltar à lista</a>
</div>
