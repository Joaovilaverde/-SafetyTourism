@model SafetyTourism.Models.AfectadoPor

@{
    ViewData["Title"] = "Apagar afectados por";
}



<h3>Tens a certeza que queres apagar este afectado por?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Destino
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destino.Nome)
        </dd>
        <dt class="col-sm-2">
            Doença
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doenca.Nome)
        </dd>
        <dt class="col-sm-2">
            Data
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2">
            Gravidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gravidade)
        </dd>
        <dt class="col-sm-2">
            Nº de Infectados por 100.000 habitantes
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InfectadosPor100k)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AfectadoPorId" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à lista</a>
    </form>
</div>