@model SafetyTourism.Models.AfectadoPor

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AfectadoPor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AfectadoPorId" />
            <div class="form-group">
                <label asp-for="DestinoId" class="control-label">Destino</label>
                <select asp-for="DestinoId" class="form-control" asp-items="ViewBag.DestinoId"></select>
                <span asp-validation-for="DestinoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoencaId" class="control-label">Doença</label>
                <select asp-for="DoencaId" class="form-control" asp-items="ViewBag.DoencaId"></select>
                <span asp-validation-for="DoencaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label">Data</label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gravidade" class="control-label">Gravidade</label>
                <input asp-for="Gravidade" class="form-control" />
                <span asp-validation-for="Gravidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InfectadosPor100k" class="control-label">Nº de Infectados por 100.000 habitantes</label>
                <input asp-for="InfectadosPor100k" class="form-control" />
                <span asp-validation-for="InfectadosPor100k" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
