@model IEnumerable<SafetyTourism.Models.AfectadoPor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Destino
            </th>
            <th>
                Doença
            </th>
            <th>
                Data
            </th>
            <th>
                Gravidade
            </th>
            <th>
                Nº de Infectados por 100.000 habitantes
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Destino.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doenca.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gravidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InfectadosPor100k)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AfectadoPorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AfectadoPorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AfectadoPorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
