@model IEnumerable<SafetyTourism.Models.Destino>

@{
    ViewData["Title"] = "Destinos";
}



<p>
    <a asp-action="Create">Criar novo destino</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DestinoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.DestinoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.DestinoId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
