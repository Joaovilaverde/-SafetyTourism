@model SafetyTourism.Models.Doenca

@{
    ViewData["Title"] = "Apagar doença";
}



<h3>Tens a certeza que queres apagar esta doença?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            Recomendação da OMS
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Recomendacao)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DoencaId" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à lista</a>
    </form>
</div>
