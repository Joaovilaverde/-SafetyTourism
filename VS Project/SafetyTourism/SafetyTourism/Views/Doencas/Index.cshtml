@model IEnumerable<SafetyTourism.Models.Doenca>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Descrição
            </th>
            <th>
                Recomendação da OMS
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recomendacao.Conteudo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DoencaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DoencaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DoencaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
