@model SafetyTourism.Models.Recomendacao

@{
    ViewData["Title"] = "Detalhes da recomendação";
}



<div>
    <h4>Detalhes da recomendação</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Conteúdo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Conteudo)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.RecomendacaoId">Editar</a> |
    <a asp-action="Index">Voltar à lista</a>
</div>
