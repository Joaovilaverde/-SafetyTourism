@model SafetyTourism.Models.Funcionario

@{
    ViewData["Title"] = "Detalhes do funcionário";
}



<div>
    <h4>Detalhes do funcionário</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.FuncionarioId">Editar</a> |
    <a asp-action="Index">Voltar à lista</a>
</div>
