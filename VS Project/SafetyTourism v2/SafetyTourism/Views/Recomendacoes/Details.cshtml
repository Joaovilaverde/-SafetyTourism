@model SafetyTourism.Models.Recomendacao

@{
    ViewData["Title"] = "Detalhes da Recomendação";
}


<div>
    <h4>Detalhes da recomendação</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data da Recomendação
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2">
            Validade da Recomendação
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Validade)
        </dd>
        <dt class="col-sm-2">
            Informação
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Informacao)
        </dd>
        <dt class="col-sm-2">
            Zona da Recomendação
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Zona.Nome)
        </dd>
        <dt class="col-sm-2">
            Id da Zona da Recomendação
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ZonaId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Voltar à lista</a>
</div>
